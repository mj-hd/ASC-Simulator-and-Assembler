; Bit-count
; count one bits of Data and store to Count
	TITLE	BITCOUNT
	ORG	0x0
Loop	LD	Data
	AND	Mask
	BZ	Loop2
	LD	Count
	ADD	One
	ST	Count
Loop2	LD	Mask
	ADD	Mask
	ST	Mask
	LD	C
	SUB	One
	BZ	End
	ST	C
	B	Loop
End	HLT
;
C 	DC 	16	;loop iteration counter
Mask  	DC 	1	;mask bits
Count	DC	0	;one bits' counter
Data	DC	5	;input data
One	DC	1	;constant of one
	END

