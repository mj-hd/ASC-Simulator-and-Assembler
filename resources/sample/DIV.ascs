; 除算を行うプログラム

	TITLE DIVISION
	ORG 0x0000

Init	; 割られる数としてAにNをストア
	LD	N
	ST	A

	; 割る数としてBにMをストア
	LD	M
	ST	B

	; Cを初期化
	LD	ZERO
	ST	C
	

; Aの値をBの値で割り、結果をCにストアする
DivSrt	LD	A
	SUB	B	; AからBを引く

	; 引き算の結果が負の時、割り算終了
	BN	DivEnd

	ST	A	; Bを引いたAをストア

	; Cの値を1増やす
	LD	C
	ADD	ONE
	ST	C

	B	DivSrt

DivEnd	LD	C
	ST	RESULT	; Cの値を平均値としてストア

	HLT

N	DC	15 ; 割られる数
M	DC	5  ; 割る数

; 計算結果
RESULT	DS	1

; 割り算用
A	DS	1
B	DS	1
C	DS	1

; その他の定数
ZERO	DC	0
ONE	DC	1

	END